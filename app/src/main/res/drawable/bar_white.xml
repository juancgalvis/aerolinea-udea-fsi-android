<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="false" android:state_checked="false" android:state_selected="false">
        <shape xmlns:android="http://schemas.android.com/apk/res/android" android:shape="rectangle">
            <solid android:color="@android:color/white" />
            <corners android:radius="10dp" />
            <gradient android:angle="90" android:endColor="#88FFFFFF" android:startColor="#66FFFFFF" />
        </shape>
    </item>
    <item android:state_checked="true">
        <shape xmlns:android="http://schemas.android.com/apk/res/android" android:shape="rectangle">
            <solid android:color="@android:color/white" />
            <corners android:radius="10dp" />
            <stroke android:width="3dp" android:color="@color/azul_oscuro" />
            <gradient android:angle="90" android:endColor="#88FFFFFF" android:startColor="#66FFFFFF" />
        </shape>
    </item>
    <item android:state_selected="true">
        <shape xmlns:android="http://schemas.android.com/apk/res/android" android:shape="rectangle">
            <solid android:color="@android:color/white" />
            <corners android:radius="10dp" />
            <stroke android:width="3dp" android:color="#009900" />
            <gradient android:angle="90" android:endColor="#88FFFFFF" android:startColor="#66FFFFFF" />
        </shape>
    </item>
    <item android:state_pressed="true">
        <shape xmlns:android="http://schemas.android.com/apk/res/android" android:shape="rectangle">
            <solid android:color="@color/blanco_transparencia" />
            <corners android:radius="10dp" />
            <gradient android:angle="90" android:endColor="#88FFFFFF" android:startColor="#FFFFFFFF" />
        </shape>
    </item>
</selector>
